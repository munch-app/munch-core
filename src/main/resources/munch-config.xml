<?xml version='1.0' encoding='utf-8'?>
<munch>
    <environment>development</environment>

    <aws>
        <provider>ec2</provider><!--ec2/keys -->
        <region>ap-southeast-1</region>

        <credentials>
            <access-key>EC2-PROVIDER</access-key>
            <secret-key>IAM-ROLES</secret-key>
        </credentials>
        <s3>
            <bucket-images>vital-images</bucket-images>
            <region>ap-southeast-1</region>
        </s3>
    </aws>

    <development>
        <aws>
            <access-key>foo</access-key>
            <secret-key>bar</secret-key>

            <s3>
                <bucket-images>vital-images</bucket-images>
                <bucket-videos>vital-videos</bucket-videos>
                <region>ap-southeast-1</region>
                <endpoint>http://docker.me:3003</endpoint>
            </s3>

            <dynamodb>
                <region>ap-southeast-1</region>
                <endpoint>http://docker.me:3005</endpoint>
            </dynamodb>
        </aws>
    </development>
</munch>
